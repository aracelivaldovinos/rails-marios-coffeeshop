<% if @review.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @review.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<div class="mx-auto text center" style="width:50%" id="form">
    <div class="card p-4">

<h1>Add Review:</h1>

<%= form_for [@product, @review] do |f| %>
  <%= f.label :author %>
  <br>
  <%= f.text_field :author %>
  <br>
  <br>
  <%= f.label :content_body %>
  <br>
  <%= f.text_area :content_body, size: "70x5" %>
  <br>
  <%= f.label :rating %>
  <br>
  <%= f.text_field :rating %>
  <br>
  <br>
  <p><%= f.submit %></p>
<% end %>
</div>
</div>