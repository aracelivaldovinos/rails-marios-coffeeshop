<style>                
  body {                 
    background-color: #d8e2dc;
  }
  .body{
    background-color: #d8e2dc;
  }
  .items h2{
    color: red; 
  }
  .items{
    color: black; 
  } 
</style> 

<div class="body">
  <div class="holder">
    <div class="content">
      <div class="items">
        <h1>Edit Review</h1>
        <p>Fill in the lines below.</p>
        <p><%= link_to "Return to Reviews", product_path(@product) %></p>
        <% if @review.errors.any? %>
          <h2>Please fix these errors:</h2>
          <ul>
            <% @review.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <%= form_for [@product, @review] do |f| %>
          <%= f.label :author %>
          <br>
          <%= f.text_field :author %>
          <br>
          <br>
          <%= f.label :content_body %>
          <br>
          <%= f.text_area :content_body, size: "70x5"  %>
          <br>
          <br>
          <%= f.label :rating %>
          <br>
          <%= f.text_field :rating %>
          <br>
          <br>
          <p><%= f.submit %></p>
        <% end %>
      </div>
    </div>
  </div>
</div>