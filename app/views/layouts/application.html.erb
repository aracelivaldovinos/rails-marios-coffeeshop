<!DOCTYPE html>
<html>
  <head>
    <title>RailsCoffeeProducts</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="warnings">
      <%= flash[:alert] %>
      <%= flash[:notice] %> 
    </div>
    <div class="hero-image">
      <div class="hero-text">
        <h1>Welcome</h1>
        <h1>to</h1>
        <h1>Marios Specialty Coffee Site</h1>
        <% if current_user %>
          <%= current_user.email %> 
          <button class="btn btn-warning">
            <%= link_to "Logout", destroy_user_session_path, method: :delete %>
          </button>
        <%else%>
          <button class="btn btn-warning">
            <%= link_to "Register", new_user_registration_path%>
          </button>
          <button class="btn btn-warning">
            <%= link_to "Login", new_user_session_path%>
          </button>
        <%end%>   
      </div>
    </div>
    <%= yield %>
    <div class="footer-dark">
      <footer>
        <div class="container">
          <div class="row">
            <div class="col-md item text">
                <h3><p><%= link_to "Marios Specialty Coffee Site", root_path %></p></h3>
            </div>
          </div>
          <p class="copyright">Araceli Valdovinos Â© 2021</p>
        </div>
      </footer>
    </div>
  </body>
</html>
