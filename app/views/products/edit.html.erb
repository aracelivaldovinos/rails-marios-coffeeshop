<style>                
  body {                 
    background-color: #d8e2dc;
  }
  .body{
    background-color: #d8e2dc;
  }
  .items h2{
    color: red; 
  }
  .items{
    color: black; 
  } 
</style> 

<div class="body">
  <div class="holder">
    <div class="content">
      <div class="items">
        <h1>Edit product</h1>
        <p>Fill in the lines below.</p>
        <p><%= link_to "Return to Products", products_path %></p>
        <% if @product.errors.any? %>
          <h3>Please fix these errors:</h3>
          <ul>
            <% @product.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
        <%= form_for @product do |f| %>
          <%= f.label :name %>
          </br>
          <%= f.text_field :name %>
          </br>
          <%= f.label :cost %>
          </br>
          <%= f.text_field :cost %>
          </br>
          <%= f.label :country_of_origin%>
          </br>
          <%= f.text_field :country_of_origin %>
          </br>
          </br>
          <%= f.submit  %>
        <% end %>
      </div>
    </div>
  </div>
</div>