<% if @product.errors.any? %>
  <h3>Please fix these errors:</h3>
  <ul>
    <% @product.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

    <div class="heading">
      <h1 class="header">New product</h1>
      <br>
    </div>


<div class="mx-auto text center" style="width:50%" id ="form">
  <div class="card p-4">
    <%= form_for @product do |f| %>
      <div class = "f">
      <%= f.label :name %>
      <%= f.text_field :name %>
      </div>
      <br>
      <div class = "f">
      <%= f.label :cost %>
      <%= f.text_field :cost %>
      </div>
      <br>
      <div class = "f">
      <%= f.label :country_of_origin%>
      <%= f.text_field :country_of_origin %>
      </div>
      <br>
      <%= f.submit  %>
    <% end %>
  </div>
</div>